@model Golestan.ViewModels.StudentDashboardViewModel

@{
    ViewData["Title"] = "پنل دانشجو";
}

<h2>خوش آمدید، @Model.StudentName</h2>

<hr />

<h4>معدل کل: <span style="color: darkgreen">@Model.GPA</span></h4>

<table class="table table-striped mt-4">
    <thead class="thead-dark">
        <tr>
            <th>نام درس</th>
            <th>نمره</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Courses != null && Model.Courses.Any())
        {
            foreach (var course in Model.Courses)
            {
                <tr>
                    <td>@course.CourseTitle</td>
                    <td>@course.Grade</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2" class="text-center text-muted">هیچ درسی یافت نشد</td>
            </tr>
        }
    </tbody>
</table>
