@model Golestan.ViewModels.ChangeInstructorViewModel

<h2>تغییر استاد</h2>

<form asp-action="ChangeInstructor" method="post">
    <input type="hidden" asp-for="SectionId" />

    <div class="form-group">
        <label asp-for="SelectedInstructorId"></label>
        <select asp-for="SelectedInstructorId" asp-items="Model.Instructors" class="form-control"></select>
        <span asp-validation-for="SelectedInstructorId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">ذخیره</button>
    <a asp-action="SectionDetails" asp-route-id="@Model.SectionId" class="btn btn-secondary mt-2">بازگشت</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
