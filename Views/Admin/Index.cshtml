@model List<User>

<h2>لیست کاربران</h2>

<table class="table">
    <thead>
        <tr>
            <th>نام</th>
            <th>ایمیل</th>
            <th>نقش‌ها</th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName @user.LastName</td>
                <td>@user.Email</td>
                <td>
                    @string.Join(", ", user.UserRoles.Select(r => r.Role.Name))
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">ایجاد کاربر جدید</a>
