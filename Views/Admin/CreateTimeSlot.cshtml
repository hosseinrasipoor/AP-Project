@model Golestan.ViewModels.CreateTimeSlotViewModel

@{
    ViewData["Title"] = "ایجاد بازه زمانی جدید";
}

<h2 class="mb-4">ایجاد بازه زمانی جدید</h2>

<form asp-action="CreateTimeSlot" method="post">
    <div class="form-group">
        <label asp-for="Day" class="control-label"></label>
        <input asp-for="Day" class="form-control" />
        <span asp-validation-for="Day" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartTime" class="control-label"></label>
        <input asp-for="StartTime" class="form-control" type="time" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndTime" class="control-label"></label>
        <input asp-for="EndTime" class="form-control" type="time" />
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">ثبت</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
