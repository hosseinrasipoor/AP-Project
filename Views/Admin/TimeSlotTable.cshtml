@model List<Golestan.Models.TimeSlot>

@{
    ViewData["Title"] = "Time Slot Table";
}

<h2>Time Slot List</h2>
<a class="btn btn-success mb-3" asp-action="CreateTimeSlot">+ Add Time Slot</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Day</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var slot in Model)
        {
            <tr>
                <td>@slot.Id</td>
                <td>@slot.Day</td>
                <td>@slot.StartTime.ToString("HH:mm")</td>
                <td>@slot.EndTime.ToString("HH:mm")</td>
                <td>
                    <form asp-action="DeleteTimeSlot" asp-route-id="@slot.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
