@model Golestan.ViewModels.CreateSectionViewModel

@{
    ViewData["Title"] = "ایجاد سشن جدید";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="CreateSection" method="post" class="needs-validation" novalidate>
    <div class="form-group mb-3">
        <label asp-for="CourseId">درس</label>
        <select asp-for="CourseId" asp-items="Model.Courses" class="form-control"></select>
        <span asp-validation-for="CourseId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ClassroomId">کلاس</label>
        <select asp-for="ClassroomId" asp-items="Model.Classrooms" class="form-control"></select>
        <span asp-validation-for="ClassroomId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="TimeSlotId">تایم اسلات</label>
        <select asp-for="TimeSlotId" asp-items="Model.TimeSlots" class="form-control"></select>
        <span asp-validation-for="TimeSlotId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="InstructorId">استاد</label>
        <select asp-for="InstructorId" asp-items="Model.Instructors" class="form-control"></select>
        <span asp-validation-for="InstructorId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Year">سال</label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Semester">ترم</label>
        <input asp-for="Semester" class="form-control" />
        <span asp-validation-for="Semester" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="FinalExamDate">تاریخ امتحان نهایی</label>
        <input asp-for="FinalExamDate" type="date" class="form-control" />
        <span asp-validation-for="FinalExamDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">ایجاد سشن</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
