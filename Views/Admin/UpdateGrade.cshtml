@model Golestan.ViewModels.UpdateGradeViewModel

<h3>ویرایش نمره برای: @Model.StudentName</h3>

<form asp-action="UpdateGrade" method="post">
    <input type="hidden" asp-for="SectionId" />
    <input type="hidden" asp-for="StudentId" />

    <div class="form-group">
        <label asp-for="Grade"></label>
        <input asp-for="Grade" class="form-control" />
        <span asp-validation-for="Grade" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">ثبت نمره</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
