@model Golestan.ViewModels.UpdateGradeViewModel
@{
    ViewData["Title"] = "ویرایش نمره";
}

<h2 class="mb-4">ویرایش نمره برای @Model.StudentName</h2>

<form asp-action="UpdateGrade" method="post" class="col-md-4">
    <input type="hidden" asp-for="SectionId" />
    <input type="hidden" asp-for="StudentId" />

    <div class="form-group mb-3">
        <label asp-for="Grade" class="form-label">نمره</label>
        <input asp-for="Grade" class="form-control" type="number" min="0" max="20" step="0.01" />
        <span asp-validation-for="Grade" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">ثبت</button>
    <a href="@Url.Action("SectionDetails", "Instructor", new { id = Model.SectionId })" class="btn btn-secondary">بازگشت</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
